# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Domain Configuration
DOMAIN=your-domain.com
FRONTEND_URL=https://your-domain.com
ACME_EMAIL=admin@your-domain.com

# Database Configuration
POSTGRES_DB=worrybox_prod
POSTGRES_USER=worrybox_user
POSTGRES_PASSWORD=your-secure-database-password
DATABASE_URL=postgresql://worrybox_user:your-secure-database-password@postgres:5432/worrybox_prod

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:your-secure-redis-password@redis:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-token-secret-key-at-least-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Email Configuration (SMTP)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USER=noreply@your-domain.com
EMAIL_PASS=your-email-password

# LemonSqueezy Configuration
LEMONSQUEEZY_API_KEY=your-lemonsqueezy-api-key
LEMONSQUEEZY_WEBHOOK_SECRET=your-lemonsqueezy-webhook-secret

# Monitoring Configuration
GRAFANA_PASSWORD=your-secure-grafana-password
LOG_LEVEL=info

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100