# Environment Configuration Example
# Copy this file to .env and fill in your actual values

NODE_ENV=development
PORT=5000

# Domain Configuration (for production)
DOMAIN=localhost
FRONTEND_URL=http://localhost:3000
ACME_EMAIL=admin@localhost

# Database Configuration
POSTGRES_DB=worrybox_dev
POSTGRES_USER=worrybox_user
POSTGRES_PASSWORD=your-database-password
DATABASE_URL=postgresql://worrybox_user:your-database-password@localhost:5432/worrybox_dev

# Redis Configuration (optional for development)
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@localhost:6379

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-at-least-32-characters
JWT_REFRESH_SECRET=your-refresh-token-secret-key-at-least-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# LemonSqueezy Configuration
LEMONSQUEEZY_API_KEY=your-lemonsqueezy-api-key
LEMONSQUEEZY_WEBHOOK_SECRET=your-lemonsqueezy-webhook-secret

# Monitoring Configuration
GRAFANA_PASSWORD=admin
LOG_LEVEL=debug

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000